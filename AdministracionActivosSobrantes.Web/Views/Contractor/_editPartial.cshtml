@model AdministracionActivosSobrantes.Contractors.Dto.UpdateContractorInput
@{
    ViewBag.Title = "Editar Transportista";
}
@using (Html.BeginForm("Edit", "Contractor", FormMethod.Post, new { @class = "form-horizontal", @id = "form" }))
{
    @Html.ValidationSummary(true)
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4>Editar @Model.CompleteName</h4>
    </div>
    if (Model != null)
    {<div class="modal-body">
        <fieldset>
            <div class="well col-lg-10 col-lg-offset-1">
                <div class="input-group col-lg-10">
                    @Html.LabelFor(model => model.CompleteName, new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.CompleteName, new { @class = "form-control", @id = "NameText", @Type = "text", @required = "required" })
                    @Html.ValidationMessageFor(model => model.CompleteName)
                </div>
                <div class="input-group col-lg-10">
                    @Html.LabelFor(model => model.ContractorCode, new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.ContractorCode, new { @class = "form-control", @id = "CodeText", @Type = "text", @required = "required" })
                    @Html.ValidationMessageFor(model => model.ContractorCode)
                </div>
                <div class="input-group col-lg-10">
                    @Html.LabelFor(model => model.Email, new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @id = "EmailText", @Type = "email", @required = "required" })
                    @Html.ValidationMessageFor(model => model.Email)
                </div>
                <div class="input-group col-lg-10">
                    @Html.LabelFor(model => model.Phone, new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", @id = "PhoneText", @Type = "text", @required = "required" })
                    @Html.ValidationMessageFor(model => model.Phone)
                </div>
                @if (Model.ErrorCode == 1)
                {
                    <hr />
                    <div class="alert alert-success alert-dismissible" role="alert" style="text-align: center">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <strong>@Model.ErrorDescription</strong>
                    </div>
                }
                else if (Model.ErrorCode == -1)
                {
                    <hr />
                    <div class="alert alert-danger alert-dismissible" role="alert" style="text-align: center">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <strong>@Model.ErrorDescription</strong>
                    </div>
                }
            </div>
        </fieldset>

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
        <button type="submit" class="btn btn-primary">Guardar</button>
    </div>

    }
}

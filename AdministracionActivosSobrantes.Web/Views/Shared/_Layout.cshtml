@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Grupo Clima | @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/font-awesome/css")
    @Styles.Render("~/Bundles/vendor/css")
    <link href="~/Content/awesome-bootstrap-checkbox.css" rel="stylesheet">
    <link href="~/Content/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="~/css/main.less" rel="stylesheet">
    <script src="@Url.Content("~/Scripts/jquery-2.1.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.blockUI.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/validator.js")" type="text/javascript"></script>
</head>
@if (Request.IsAuthenticated)
{
    <body>
        <!-- Wrapper-->
        <div id="wrapper">
            @if (Request.IsAuthenticated)
            {
            <!-- Navigation -->
                @Html.Partial("_Navigation")

            }
            <!-- Page wraper -->
            <div id="page-wrapper" class="gray-bg">

                <!-- Top Navbar -->
                @Html.Partial("_TopNavbar")

                <!-- Main view -->
                @RenderBody()

                <!-- Footer -->
                @Html.Partial("_Footer")

            </div>
            <!-- End page wrapper-->
        </div>
        <!-- End wrapper-->
        @*@Scripts.Render("~/bundles/jquery")*@
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/plugins/metsiMenu")
        @Scripts.Render("~/plugins/pace")
        @Scripts.Render("~/plugins/slimScroll")
        @Scripts.Render("~/Bundles/vendor/js/bottom")
        @Scripts.Render("~/bundles/inspinia")
        @Scripts.Render("~/plugins/datatable")
        @Scripts.Render("~/plugins/jSignature")

        @RenderSection("scripts", required: false)
    </body>
}
else
{
    <body class="gray-bg">
        <br />
        <br />
        <!-- Wrapper-->
        <div id="wrapper">
            <!-- Page wraper -->
            <div>
                <!-- Main view -->
                @RenderBody()
                <!-- Footer -->
                @Html.Partial("_Footer")
            </div>
            <!-- End page wrapper-->
        </div>
        <!-- End wrapper-->
        @*@Scripts.Render("~/bundles/jquery")*@
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/plugins/metsiMenu")
        @Scripts.Render("~/plugins/pace")
        @Scripts.Render("~/plugins/slimScroll")
        @Scripts.Render("~/Bundles/vendor/js/bottom")
        @Scripts.Render("~/bundles/inspinia")
        @RenderSection("scripts", required: false)
    </body>
}
</html>

@using AdministracionActivosSobrantes.InRequest
@model AdministracionActivosSobrantes.InRequest.Dto.DetailInRequestOutput
@{
    ViewBag.Title = "Detalle de la Solicitud";
    var currencyFmt = @System.Configuration.ConfigurationManager.AppSettings["CurrencyFormat"];
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2> Detalle de @Html.DisplayFor(model => model.RequestNumber)</h2>
    </div>

    <div class="col-lg-2">
        @if (Model.Status == InRequestStatus.Active)
        {
            <h2>Estado: <span class="label label-primary">Activa</span></h2>
        }
        else if (Model.Status == InRequestStatus.Processed)
        {
            <h2>Estado: <span class="label label-success">Aprobada</span></h2>
        }


    </div>
</div>
<br />
<div class="wrapper wrapper-content white-bg">
    <fieldset>
        <div class="wrapper-content ">
            <div class="col-lg-6">
                <div class="col-lg-4" style="text-align: right">
                    <p class="">
                        <strong>No Solicitud: </strong>
                    </p>
                </div>
                <div class="col-lg-8">
                    <p class="">@Html.DisplayFor(model => model.RequestNumber)</p>
                </div>

            </div>
            <div class="col-lg-6">
                <div class="col-lg-4" style="text-align: right">
                    <p class="">
                        <strong>No Documento Solicitud : </strong>
                    </p>
                </div>
                <div class="col-lg-8" style="text-align: left">
                    <p class="">@Html.DisplayFor(model => model.RequestDocumentNumber)</p>
                </div>
            </div>
        </div>
        <div class="wrapper-content ">
            <div class="col-lg-6">
                <div class="col-lg-4" style="text-align: right">
                    <p class="">
                        <strong>Ubicación: </strong>
                    </p>
                </div>
                <div class="col-lg-8">
                    <p class="">@Html.DisplayFor(model => model.Cellar.Name)</p>
                </div>

            </div>
            <div class="col-lg-6">
                <div class="col-lg-4" style="text-align: right">
                    <p class="">
                        <strong>Tipo de Solicitud: </strong>
                    </p>
                </div>
                <div class="col-lg-8" style="text-align: left">
                    <p class="">Entrada de Activos</p>
                </div>
            </div>
        </div>

        <div class="wrapper-content ">
            <div class="col-lg-6">
                <div class="col-lg-4" style="text-align: right">
                    <p class="">
                        <strong>Fecha Creación: </strong>
                    </p>
                </div>
                <div class="col-lg-8">
                    @if (Model.CreationTime != null)
                    {
                        <p class="">@Model.CreationTime.ToShortDateString()</p>
                    }
                    else
                    {
                        <p>No asignada</p>
                    }
                </div>

            </div>
            <div class="col-lg-6">
                <div class="col-lg-4" style="text-align: right">
                    <p class="">
                        <strong>Creada por: </strong>
                    </p>
                </div>
                <div class="col-lg-8" style="text-align: left">
                    @if (Model.CreatorUserId != null)
                    {
                        <p class="">@Model.Users.Where(a => a.Id == Model.CreatorUserId).FirstOrDefault().UserName</p>
                    }
                    else
                    {
                        <p class="">No Asignado</p>
                    }

                </div>
            </div>
        </div>
        <div class="wrapper-content ">
            <div class="col-lg-6">
                <div class="col-lg-4" style="text-align: right">
                    <p class="">
                        <strong>Fecha Procesada: </strong>
                    </p>
                </div>
                <div class="col-lg-8">
                    @if (Model.AprovedDate != null)
                    {
                        <p class="">@Model.AprovedDate.Value.ToShortDateString()</p>
                    }
                    else
                    {
                        <p>No asignada</p>
                    }
                </div>

            </div>
            <div class="col-lg-6">
                <div class="col-lg-4" style="text-align: right">
                    <p class="">
                        <strong>Procesada por: </strong>
                    </p>
                </div>
                <div class="col-lg-8" style="text-align: left">
                    @if (Model.ApprovalUserId != null)
                    {
                        <p class="">@Model.Users.Where(a => a.Id == Model.ApprovalUserId.Value).FirstOrDefault().UserName</p>
                    }
                    else
                    {
                        <p class="">No Asignado</p>
                    }

                </div>
            </div>
        </div>

        <div class="wrapper-content">
            <div class="col-lg-12">
                <div class="col-lg-2" style="text-align: right">
                    <p class="">
                        <strong>Notas </strong>
                    </p>
                </div>
                <div class="col-lg-10" style="text-align: left">
                    @Html.DisplayFor(model => model.Notes)

                </div>
            </div>
        </div>
        <div class="wrapper-content">
            <div class="col-lg-12">
                <div class="col-lg-2" style="text-align: right">
                    <p class="">
                        <strong>Observaciones </strong>
                    </p>
                </div>
                <div class="col-lg-10" style="text-align: left">
                    @Html.DisplayFor(model => model.Comment)

                </div>
            </div>
        </div>
        <div class="wrapper-content ">
            <div class="col-lg-6">
                <div class="col-lg-4" style="text-align: right">
                    <p class="">
                        <strong>Imagen 1: </strong>
                    </p>
                </div>
                <div class="col-lg-8">
                    @if (Model.ImagePath1 != null)
                    {
                        <img src="@Model.ImagePath1" alt="Imagen de Activo" class="img-thumbnail img-responsive" style="max-height: 200px; max-width: 350px">

                    }
                    else
                    {
                        <p>No asignada</p>
                    }
                </div>

            </div>
            <div class="col-lg-6">
                <div class="col-lg-4" style="text-align: right">
                    <p class="">
                        <strong>Imagen 2: </strong>
                    </p>
                </div>
                <div class="col-lg-8" style="text-align: left">
                    @if (Model.ImagePath2 != null)
                    {
                        <img src="@Model.ImagePath2" alt="Imagen de Activo" class="img-thumbnail img-responsive" style="max-height: 200px; max-width: 350px">
                    }
                    else
                    {
                        <p class="">No Asignada</p>
                    }

                </div>
            </div>
        </div>
        <br />
        @*if (Model.SignatureData.Length > 5)
    {
        <div class="wrapper-content">

            <div class="col-lg-12">
                <div class="col-lg-2" style="text-align: right">
                    <p class="">
                        <strong>Firma: </strong>
                    </p>
                </div>
                <div class="col-lg-10" style="text-align: left">
                    <img src="@Model.SignatureData" alt="Imagen de Activo" class="img-thumbnail img-responsive " style="height: 150px; max-width: 300px">

                </div>
            </div>
        </div>
    }*@

    </fieldset>
    <br />
    <h4>Detalles de Activos de la Entrada</h4>
    <table class="table table-striped table-bordered table-condensed"
           style="font-size: small">
        <thead style="background-color: gray; text-align: center">
            <tr>
                <th style="text-align: center">
                    # Activo
                </th>
                <th style="text-align: center">
                    Nombre Activo
                </th>
                <th style="text-align: center">
                    Cantidad
                </th>
                <th style="display: none">
                    Precio
                </th>
                <th style="display: none">
                    Total
                </th>
            </tr>
        </thead>
        @if (Model.Details != null && Model.Details.Any())
        {
            <tbody>
                @foreach (var item in Model.Details.Where(d => d.IsDeleted == false))
                {

                    <tr>
                        <td style="text-align: center">
                            @item.Asset.Code
                        </td>
                        <td style="text-align: center">
                            @item.NameAsset
                        </td>
                        <td style="text-align: center">
                            @item.StockAsset
                        </td>
                        <td style="text-align: center; display: none">
                            @item.Price
                        </td>
                        <td style="text-align: center; display: none">
                            @item.GetAmountAsset()
                        </td>
                    </tr>


                }
                <tr>
                    <td style="border: 0; display: none"></td>
                    <td style="border: 0; display: none"></td>
                    <td style="text-align: center">
                        <b>Total Unidades:</b>
                    </td>
                    <td style="text-align: center">
                        <b>@Model.Details.Where(d => d.IsDeleted == false).Sum(d => d.StockAsset)</b>
                    </td>
                </tr>
                <tr style="text-align: center;display: none">
                    <td style="border: 0; display: none"></td>
                    <td style="border: 0; display: none"></td>
                    <td style="text-align: center">
                        <b>Total General:</b>
                    </td>
                    <td style="text-align: center">
                        <b>@Model.Details.Where(d => d.IsDeleted == false).Sum(d => d.GetAmountAsset())</b>
                    </td>
                </tr>


            </tbody>
        }
    </table>
    <div class="wrapper-content  ">
        <a class="btn btn-primary col-lg-offset-6" href="@Url.Action("Index", "InRequests")">Regresar</a>
    </div>
    <br />
</div>
